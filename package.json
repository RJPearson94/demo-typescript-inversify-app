{
  "name": "inversify-demo",
  "description": "Example apps to prototype Dependency Injection using Typescript & Inversify",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "format:all": "yarn format:go && yarn format:js && yarn format:terraform",
    "format:go": "gofmt -s -w .",
    "format:js": "yarn prettier:all",
    "format:terraform": "terraform fmt -recursive",
    "lint": "eslint",
    "lint:all": "eslint .",
    "prettier": "prettier",
    "prettier:all": "prettier --write '**/*.{ts,js,json,yml}'",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.18",
    "typescript": "^3.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
