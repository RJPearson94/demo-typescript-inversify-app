{
  "name": "@rjpearson94/web-app",
  "description": "An example app to prototype Dependency Injection using Typescript & Inversify",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn clean && webpack",
    "clean": "rm -rf ./dist",
    "newman": "newman",
    "start": "yarn build && pm2 start ecosystem.json",
    "stop": "pm2 stop ecosystem.json",
    "test": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "test:e2e": "go test ./e2e",
    "test:integration": "jest ./integration-test",
    "test:unit": "jest ./test",
    "webpack": "webpack-cli"
  },
  "dependencies": {
    "@rjpearson94/core": "^1.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.6.9",
    "@types/supertest": "^2.0.8",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^24.8.0",
    "newman": "^4.5.3",
    "pm2": "^3.5.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  }
}
