{
  "name": "@rjpearson94/web-app",
  "description": "An example app to prototype Dependency Injection using Typescript & Inversify",
  "version": "1.0.0",
  "scripts": {
    "api-docs:view": "speccy serve ./api/docs/swagger.json",
    "api-docs:lint": "speccy lint ./api/docs/swagger.json",
    "build": "yarn clean && webpack",
    "clean": "rm -rf ./dist",
    "newman": "newman",
    "start": "yarn build && pm2 start ecosystem.json",
    "stop": "pm2 stop ecosystem.json",
    "test": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "test:e2e": "go test ./e2e",
    "test:integration": "jest ./integration-test",
    "test:unit": "jest ./test",
    "webpack": "webpack-cli"
  },
  "dependencies": {
    "@rjpearson94/core": "file:../core",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "inversify-express-utils": "^6.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/supertest": "^2.0.8",
    "awesome-typescript-loader": "^5.2.1",
    "newman": "^4.5.7",
    "pm2": "^4.2.0",
    "speccy": "^0.11.0",
    "supertest": "^4.0.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
