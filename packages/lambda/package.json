{
  "name": "@rjpearson94/lambda",
  "description": "An example lambda app to prototype Dependency Injection using Typescript & Inversify",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn clean && webpack",
    "clean": "rm -rf ./dist",
    "newman": "newman",
    "local-lambda": "bst proxy lambda modules/lambda/dist/main.js --verbose",
    "test": "yarn test:unit && yarn test:component && yarn test:integration && yarn test:e2e",
    "test:component": "yarn test:component:api-gateway && yarn test:component:lambda",
    "test:component:api-gateway": "go test ./modules/api-gateway/test/component",
    "test:component:lambda": "go test ./modules/lambda/test/component",
    "test:e2e": "go test ./deployment/test/e2e",
    "test:integration": "yarn test:integration:lambda",
    "test:integration:lambda": "go test ./modules/lambda/test/integration",
    "test:unit": "jest ./test",
    "webpack": "webpack-cli"
  },
  "dependencies": {
    "@rjpearson94/core": "file:../core",
    "aws-sdk": "^2.556.0",
    "middy": "^0.30.4",
    "source-map-support": "^0.5.13"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "bespoken-tools": "^2.4.15",
    "newman": "^4.5.5",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-node-externals": "^1.7.2",
    "zip-webpack-plugin": "^3.0.0"
  }
}
