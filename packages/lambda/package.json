{
  "name": "@rjpearson94/lambda",
  "description": "An example lambda app to prototype Dependency Injection using Typescript & Inversify",
  "version": "1.0.0",
  "scripts": {
    "build": "run-s clean webpack",
    "clean": "rm -rf ./dist",
    "newman": "newman",
    "local-lambda": "bst proxy lambda modules/lambda/dist/main.js --verbose",
    "test": "run-s test:unit test:component test:integration test:e2e",
    "test:component": "run-s test:component:api-gateway test:component:lambda",
    "test:component:api-gateway": "go test ./modules/api-gateway/test/component",
    "test:component:lambda": "go test ./modules/lambda/test/component",
    "test:e2e": "go test ./deployment/test/e2e",
    "test:integration": "run-s test:integration:lambda",
    "test:integration:lambda": "go test ./modules/lambda/test/integration",
    "test:unit": "jest ./test",
    "webpack": "webpack-cli"
  },
  "dependencies": {
    "@rjpearson94/core": "file:../core",
    "aws-sdk": "^2.590.0",
    "middy": "^0.32.3",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "bespoken-tools": "^2.4.24",
    "newman": "^4.5.7",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2",
    "zip-webpack-plugin": "^3.0.0"
  }
}
