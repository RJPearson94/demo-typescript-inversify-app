{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["*"]
    }
  },
  "compileOnSave": false,
  "exclude": ["node_modules"]
}
