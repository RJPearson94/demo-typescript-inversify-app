{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "baseUrl": "./src",
        "paths": {
            "@src/*": ["*"]
        }
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules"
    ]
}