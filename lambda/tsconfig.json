{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "declaration": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@shared/*": [
        "node_modules/inversify-shared/src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules/?!(inversify-shared)"
  ]
}
