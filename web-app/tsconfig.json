{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "declaration": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@shared/*": ["node_modules/inversify-shared/src/*"]
        }
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules/?!(inversify-shared)"
    ]
}